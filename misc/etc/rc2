date

# Make nodes
mknod /dev/null c 3 0
mknod /dev/random c 4 0
cat /dev/null >/etc/utmp
touch /etc/mount /dev/rp3
echo 'clearing /tmp'
rm -rf /tmp/
mkdir /tmp

# default syslog logging file
mkdir -p /var/log/
touch /var/log/system.log

echo 'updating motd'
echo -n "Welcome to FreeNIX " > /etc/motd
uname -v >> /etc/motd

echo -n 'starting daemons:'
echo -n ' cron';	cron
echo '.'

sh /etc/rc.local
date; echo

echo 'Experimental build. Features are subject to change.'
echo 'root account password is \'root\''
echo 'This virtual harddisk is fresh on each boot, have fun!'; echo
